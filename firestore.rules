
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow anyone to create a user document.
    // This is safe because our server action only does this right after
    // a user is successfully created in Firebase Authentication.
    // We also check that the document ID matches the user's UID.
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow logged-in users to read, update, or delete their own data.
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to read city and influencer data
    match /cities/{cityId} {
      allow read: if request.auth != null;
    }
    
    match /cities/{cityId}/influencers/{influencerId} {
        allow read, write: if request.auth != null;
    }
  }
}
